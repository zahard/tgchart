{
  "name": "tgchart",
  "version": "1.0.0",
  "description": "Chart for Telegram developers contest",
  "main": "index.hmtl",
  "scripts": {
    "minify": "uglifyjs lib/tgchart.js -c -m -o lib/tgchart.min.js",
    "build": "rollup src/index.js --file lib/tgchart.js --format iife",
    "dev": "rollup src/index.js --file lib/tgchart.js --format iife -w",
    "deploy": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zahard/tgchart.git"
  },
  "author": "Zakhar Portianov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zahard/tgchart/issues"
  },
  "homepage": "https://github.com/zahard/tgchart#readme",
  "devDependencies": {
    "rollup": "^1.6.0",
    "uglify-js": "^3.4.9"
  }
}
